{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": false,
        "module": "commonjs",
        "lib": ["dom", "es2016", "es2017", "es7"],
        "target": "es6",
        "allowSyntheticDefaultImports": true,
        "stripInternal":true,
        "skipLibCheck": true,
        "alwaysStrict":true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "strict": false,
        "noUnusedLocals": false,
        "jsx": "react",
        "types": []
      },
      "include": [
        "./node_modules/@geppettoengine/geppetto-client/js/components/interface/flexLayout2/src/**/*",
        "./@geppettoengine/geppetto-client/js/components/interface/flexLayout2/examples/demo/*",
        "./node_modules/@geppettoengine/geppetto-client/js/components/interface/Search/**/*",
        "./@geppettoengine/geppetto-client/js/components/interface/Search/*"
        ]
}
